pipeline {
    agent any

    stages {
        stage ('Audit tools') {
            steps {
                sh '''
                    java -version
                    gradle -v
                '''
            }
        }
        stage ('Compile') {
            steps {
                dir('./LaboratorioJenkins/jenkins-resources/calculator') {
                    sh '''
                    chmod +x gradlew
                    ./gradlew compileJava
                    '''
                }
            }
        }
        stage ('Unit Test') {
            steps {
                dir('../jenkins-resources/calculator') {
                    sh './gradlew test'
                }
            }
        }
    }
}
